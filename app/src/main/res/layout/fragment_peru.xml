<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.PeruFragment"
    android:background="@drawable/fondo_postres">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="470dp"
        android:layout_height="652dp"
        android:layout_below="@id/textViewDescripcion"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/panel"
        android:backgroundTint="#80FFFFFF"
        android:foreground="@drawable/panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescripcion"
        app:layout_constraintVertical_bias="0.333"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewDescripcion"
        android:layout_width="288dp"
        android:layout_height="31dp"
        android:fontFamily="@font/aceh_light"
        android:text="Elige el que más te guste"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23000002" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:fontFamily="@font/aceh_light"
        android:text="SUSPIRO DE LIMEÑA"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescripcion" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/aceh_light"
        android:text="PICARON"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescripcion" />

    <ImageButton
        android:id="@+id/imSuspiro"
        android:layout_width="253dp"
        android:layout_height="128dp"
        android:contentDescription="@string/imSuspiro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@mipmap/suspiro" />

    <ImageButton
        android:id="@+id/imPicaron"
        android:layout_width="253dp"
        android:layout_height="128dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/imPicaron"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@mipmap/picaron" />

</androidx.constraintlayout.widget.ConstraintLayout>